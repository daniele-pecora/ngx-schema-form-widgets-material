{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "module": "esnext",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "paths": {
        "ngx-schema-form": [
          "projects/schema-form/src/lib"
        ]
      }
    }
  }
  